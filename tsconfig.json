{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@adapters/*": [
        "src/adapters/*"
      ],
      "@adapters-primary/*": [
        "src/adapters/primary/*"
      ],
      "@adapters-primary-mcp/*": [
        "src/adapters/primary/mcp/*"
      ],
      "@adapters-secondary/*": [
        "src/adapters/secondary/*"
      ],
      "@adapters-secondary-persistence/*": [
        "src/adapters/secondary/persistence/*"
      ],
      "@adapters-secondary-rng/*": [
        "src/adapters/secondary/rng/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@domain-entities/*": [
        "src/domain/entities/*"
      ],
      "@domain-value-objects/*": [
        "src/domain/value-objects/*"
      ],
      "@ports/*": [
        "src/ports/*"
      ],
      "@ports-primary/*": [
        "src/ports/primary/*"
      ],
      "@ports-secondary/*": [
        "src/ports/secondary/*"
      ],
      "@use-cases/*": [
        "src/use-cases/*"
      ],
      "@use-cases-implementations/*": [
        "src/use-cases/implementations/*"
      ],
      "@test/*": [
        "test/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}